// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  login     String
  avatarUrl String
  posts     Post[]
  topicos   Topico[]
  telefone  String
  pets      String[]
}

model Post {
  id          String   @id @default(uuid())
  imagens     String[]
  descricao   String
  filtros     String[]
  localizacao String[]
  avisos      String[]
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())

  user   Usuario @relation(fields: [userId], references: [id])
  userId String
}

model Topico {
  id          String   @id @default(uuid())
  descricao   String
  comentarios String[]
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())

  user   Usuario @relation(fields: [userId], references: [id])
  userId String
}